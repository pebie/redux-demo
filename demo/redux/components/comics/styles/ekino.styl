@require "_vars.styl"

transition($value)
  -webkit-transition $value /* Saf3.2+, Chrome */
     -moz-transition $value /* FF4+ */
      -ms-transition $value
       -o-transition $value /* Opera 10.5+ */
          transition $value

clearfix()
  zoom 1
  &:after
  &:before
    content ""
    display table
  &:after
    clear both

@require "_header.styl"
@require "_footer.styl"
@require "_banner.styl"
@require "_repo-grid.styl"
@require "_repo-detail.styl"
@require "_readme.styl"

body
  font-family 'GraphikReg', sans-serif
  color $txt-color
  margin 0
  background-color $bg-color
  font-size 16px
  line-height 22px

h1, h2, h3, h4, h5, h6
  font-family 'GraphikBold', sans-serif
  font-weight normal

*
  box-sizing border-box

a
  color inherit
  text-decoration none

.main
  max-width 1280px
  margin 0 auto
