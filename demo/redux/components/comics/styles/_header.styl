.header
  background-color #1e1e1e
  color            #ddd

  height      52px
  line-height 52px

  padding 0 20px

  font-family GraphikBold
  font-weight 400

  .fa
    font-size 24px
    vertical-align middle
    margin-left 7px

  &__brand
    float left

  &__brand
  &__corporate__link
    display inline-block
    padding-top 7px
    line-height 1em
    margin-top 6px

  &__nav
    float right
    height 52px
    overflow hidden


@media (max-width: 520px)
  .header
    padding 0 15px
